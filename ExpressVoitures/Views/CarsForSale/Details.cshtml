@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model ExpressVoitures.Models.ViewModels.CarForSaleModel

@{
    ViewData["Title"] = "Voiture en vente";
}

<h1>Voiture en vente</h1>

<div>
    <h4>Informations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdCar)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IdCar)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DateOfAvailabilityForSale)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateOfAvailabilityForSale)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SellingPrice)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SellingPrice)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ImagePath)</dt>
        @if (Model.ImagePath != null)
        {
            <div class="col-sm-10">
                <img src="~/@Model.ImagePath" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        }
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DateOfSale)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.DateOfSale)</dd>
    </dl>
</div>
<div>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.IdCarForSale">Modifier</a>
    }
</div>
<div>
    <a asp-action="Index">Retour</a>
</div>
